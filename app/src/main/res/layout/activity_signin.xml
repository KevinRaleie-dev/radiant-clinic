<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Activities.Signin">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/clinic_logo"
        android:src="@drawable/logo"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@+id/logo"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cd_google"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardElevation="10dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/googleRed"
        android:layout_marginStart="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/search" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Sign up with google"
                android:textAlignment="center"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_facebook"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardElevation="10dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/facebookBlue"
        android:layout_below="@+id/cd_google"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/facebook_logo" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Sign up with facebook"
                android:textAlignment="center"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cd_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:layout_below="@+id/cd_facebook"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/envelope" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="Sign up with email"
                    android:textAlignment="center"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/have_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd_email"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Already have an account? Sign in."/>

    <TextView
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/have_account"
        android:layout_marginTop="50dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="By creating an account, I accept Radiant Health Clinic's"/>
    <TextView
        android:id="@+id/terms_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/terms"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Terms of Service."/>




</RelativeLayout>